/* components/searchbar/searchbar.wxss */
/* searchbar */
.searchbar {
  background-color: #07c160;
  padding: 20rpx;
}

.icontext {
  width: 100%;
  height: 60rpx;
  background-color: white;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icontext > image {
  height: 50rpx;
  width: 50rpx;
}

.icontext > text {
  line-height: 50rpx;
  font-size: 26rpx;
  color: #aaa;
}

.icontext > input {
  height: 100%;
  width: 100%;
  padding-left: 40rpx;
  font-size: 26rpx;
}